generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String    @id
  nome         String
  email        String    @unique
  usuario      String    @unique
  password     String
  cpf          String    @unique
  dataCadastro DateTime  @map("data_cadastro")
  cargo        String
  Produto      Produto[]

  @@map("usuarios")
}

model Produto {
  id            String   @id
  nome          String
  valor         Decimal
  quantidade    Int
  dataCadastro  DateTime @map("data_cadastro")
  cadastradoPor Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId     String

  @@map("produtos")
}
