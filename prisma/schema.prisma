generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String   @id
  name         String
  email        String   @unique
  usuario      String   @unique
  password     String
  cpf          String   @unique
  dataCadastro DateTime @map("data_cadastro")

  @@map("usuarios")
}

model Produto {
  id           String   @id
  nome         String
  valor        Decimal
  quantidade   Int
  dataCadastro DateTime @map("data_cadastro")

  @@map("produtos")
}
